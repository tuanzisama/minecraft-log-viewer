{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "webworker"],
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "/@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
